<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cc000000"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fontdec"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/font_dec" />

        <TextView
            android:id="@+id/fontsize"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="0" />

        <ImageView
             android:id="@+id/fontadd"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/font_add" />
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/font1"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="楷体" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/font2"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="隶书" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/font3"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="瘦金体" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/font4"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="幼圆" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/font5"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="默认" />
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <ImageView
            android:id="@+id/pagecolor1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/page_color1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

       <ImageView
           android:id="@+id/pagecolor2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/page_color2" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_weight="1"
           android:gravity="center"
           android:text="" />

       <ImageView
           android:id="@+id/pagecolor3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/page_color3" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="" />

       <ImageView
           android:id="@+id/pagecolor4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/page_color4" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_weight="1"
           android:gravity="center"
           android:text="" />
    </LinearLayout>

</LinearLayout>