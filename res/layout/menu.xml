<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:background="#ececec"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp" >

        <com.example.myView.myRoundImageView
            android:id="@+id/id_img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            roundview:border_inside_color="#ffececec"
            roundview:border_outside_color="#ffececec"
            roundview:border_thickness="2dp" />

        <TextView
            android:id="@+id/petname"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/id_img1"
            android:gravity="center_vertical"
            android:text="这个人很神秘"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/myhomepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/homepage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/homepage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/homepage"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="我的主页"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modifieddata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/account"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="修改资料"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/bookmark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/bookmark"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="书签管理"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/download" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/download"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="下载管理"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/readbook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/readbook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/readbook"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="已读图书"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/upload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/upload"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="上传图书"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/remark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/remark"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="反馈与评价"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:src="@drawable/logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/logout"
            android:background="#ececec"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="退出当前账号"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:text="版权所有 © 合肥工业大学"
        android:textSize="10sp" />

</LinearLayout>